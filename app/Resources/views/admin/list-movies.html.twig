<div class="container col-6">

    <div class="row">
        <h1>Liste de films</h1>
        <div class="col-2">
            <a href="{{ path('add_movie') }}" class="btn btn-add">Ajouter</a>
        </div>
    </div>

    <div class="table-responsive col-12">
        <table class="table table-striped table-sm table-admin">
            <thead>
            <tr>
                <th>Id</th>
                <th colspan="3">Name</th>
            </tr>
            </thead>
            <tbody>
{% for movie in movies %}
<tr>
    <td>{{ movie.id }}</td>
    <td>{{ movie.name }}</td>
    <td><a href="{{ path('edit_movie', {'id': movie.id}) }}" class="btn btn-edit">Edit</a></td>
    <td><a href="{{ path('delete_movie', {'id': movie.id}) }}" class="btn btn-edit">Delete</a></td>
</tr>
{% endfor %}
            </tbody>
        </table>
    </div>
</div>
