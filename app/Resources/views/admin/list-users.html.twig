<div class="container col-offset-2 col-5">
<h1>Liste d'utilisateurs</h1>
    <div class="table-responsive col-12">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>Id</th>
                <th colspan="2">Name</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td><a href="{{ path('profil_user', {'id': user.id}) }}" class="btn btn-primary">Edit</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
