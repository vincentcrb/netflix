<div class="container col-offset-2 col-6">
<h1>Liste d'utilisateurs</h1>
    <div class="table-responsive col-12">
        <table class="table table-striped table-sm table-admin">
            <thead>
            <tr>
                <th>Id</th>
                <th colspan="2">Name</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td><a href="{{ path('delete_user', {'id': user.id}) }}" class="btn btn-edit">Delete</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
