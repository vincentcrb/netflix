<div class="container">
    <h1>A regarder plus tard</h1>
    <div class="row">
        {% for movie in app.user.towatch %}
            <div class="col-3 img-container">
                <a href="{{ path('profil_movie', {'id': movie.id}) }}">
                    <div class="col-12 img" style="background-image:url('{{ asset('uploads/images/' ~ movie.image) }}')">
                        <div class="movie-name"><p>{{ movie.name }}</p></div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
</div>

