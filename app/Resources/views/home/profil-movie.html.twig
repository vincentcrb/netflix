{% extends "default/layout.html.twig" %}

{% set page_title = movie.name %}

{% block content %}

<div class="img-full" style="background-image:url('{{ asset('uploads/images/' ~ movie.image) }}')"></div>

<div class="container">
<h1>{{ movie.name }}</h1>
<p>Synopsis : {{ movie.synopsis }}</p>
<p>Sortie : {{ movie.releaseDate|date('Y-m-d') }}</p>
<p>Cat√©gorie : {{ movie.categoryMovie.name }}</p>

    {% if movie.video %}
    <video controls="controls" class="col-12">
        <source src="{{ asset('uploads/videos/' ~ movie.video) }}" type="video/mp4" />
    </video>
    {% endif %}
</div>

{% endblock %}